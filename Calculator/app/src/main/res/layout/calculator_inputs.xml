<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="7"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button_clear"
            android:text="C"
            style="@style/FunctionalButtons"
            android:textColor="#FF0000"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_brackets"
            android:text="(  )"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_percentage"
            android:text="%"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_division"
            android:text="/"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_sin"
            android:text="SIN"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_cos"
            android:text="COS"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_tan"
            android:text="TAN"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_csc"
            android:text="CSC"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_sec"
            android:text="SEC"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_ctg"
            android:text="CTG"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_elevate"
            android:text="^"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_square"
            android:text="âˆš"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_7"
            android:text="7"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_8"
            android:text="8"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_9"
            android:text="9"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_multiply"
            android:text="*"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_4"
            android:text="4"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_5"
            android:text="5"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_6"
            android:text="6"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_minus"
            android:text="-"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_1"
            android:text="1"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_2"
            android:text="2"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_3"
            android:text="3"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_plus"
            android:text="+"
            style="@style/FunctionalButtons"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_number_0"
            android:text="0"
            style="@style/NumberButtons"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/button_decimal"
            style="@style/NumberButtons"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:text="." />

        <Button
            android:id="@+id/button_equals"
            android:text="="
            style="@style/EqualsButton"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>


    </GridLayout>
</RelativeLayout>